@using MvcKutuphane2.Models.Entity
<!--Diyerek içindeki alanlara ulaşabiliriz -->
@model List<TBLYAZAR>
<!-- model ile de tabloya ualaşacagım -->

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <!-- kenarlıklı table -->
    <tr style="background-color:#fcf700">
        <!-- tr diyerek satır oluşturuldu -->
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th> <!-- Başlıkta SOYAD sütünü oluştu-->
        <th>SİL</th> <!-- Başlıkta SİL sütünü oluştu-->
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var y in Model)
    {

<tr>
    <!-- th kalın punto td ince ; yeni td yeni kutu ; yeni tr yeni satır-->
    <td>@y.ID</td><!--y den gelen ID -->
    <td>@y.AD</td><!--y den gelen AD ktg yerine roman yazınca 12 kere roman yazdı -->
    <td>@y.SOYAD</td>
    <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
    <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-default" style="background-color:lightsalmon">Yazarın Kitapları</a></td>
</tr>
    }

</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>