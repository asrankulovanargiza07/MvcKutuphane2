@using MvcKutuphane2.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>


<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye Adı</th>
        <th>Üye Soyadı</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <td>İade Al</td>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@Html.DisplayFor(modelItem => k.TBLKITAP.AD)</td>
            <td>@Html.DisplayFor(modelItem => k.TBLUYELER.AD)</td>
            <td>@Html.DisplayFor(modelItem => k.TBLUYELER.SOYAD)</td>
            <td>@Html.DisplayFor(modelItem => k.TBLPERSONEL.PERSONEL)</td>
            @*<td>@k.TBLKITAP.AD</td>
                <td>@k.TBLUYELER.AD @k.TBLUYELER.SOYAD</td>*@
            @*<td>@k.TBLPERSONEL.PERSONEL</td>*@
            <td>@Convert.ToDateTime(k.ALISTARIH).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MM/yyyy")</td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>*@
            <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-default" style="background-color:#64d8ca">Kitabı  İade Et</a></td>
        </tr>
    }
</table>



